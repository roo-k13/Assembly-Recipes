@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">

    <div class="container">

        <div class="row">

            @foreach (var recipe in Model.Recipes)
            {
                <div class="col-md-4">
                    <div class="card mb-4">

                        <!-- Recipe Image -->
                        <img 
                            src="@recipe.ImageURL" 
                            class="card-img-top" 
                            alt="Recipe Image">

                        <div class = "card-body">
                            
                            <!-- Recipe Name -->
                            <h5 
                                class = "card-title">
                                @recipe.Name
                             </h5>

                            <!-- Recipe Description -->
                            <p class = "card-text">@recipe.Description</p>

                            <!-- Read More Button -->
                            <a href="/recipe/@recipe.Id" class="btn btn-primary">Read More</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
