@page
@model WebApp.Pages.Recipes.CreateRecipeModel

<h1>Create New Recipe</h1>

<form method="post">
    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" id="name" name="Name" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="shortDescription">Short Description:</label>
        <input type="text" id="shortDescription" name="ShortDescription" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="description">Description:</label>
        <textarea id="description" name="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label for="imageURL">Image URL:</label>
        <input type="text" id="imageURL" name="ImageURL" class="form-control" required />
    </div>

    <h3>Ingredients:</h3>
    <div class="form-group" id="ingredientContainer">
        <input type="text" name="Ingredients" class="form-control" required />
    </div>
    <button type="button" class="btn btn-secondary" onclick="addIngredient()">Add Ingredient</button>

    <h3>Steps:</h3>
    <div class="form-group" id="stepContainer">
        <input type="text" name="Steps" class="form-control" required />
    </div>
    <button type="button" class="btn btn-secondary" onclick="addStep()">Add Step</button>

    <button type="submit" class="btn btn-primary">Create Recipe</button>
</form>

@section Scripts {
    <script>
        var ingredientContainer = document.getElementById('ingredientContainer');
        var stepContainer = document.getElementById('stepContainer');

        function addIngredient() {
            var ingredientInput = document.createElement('div');
            ingredientInput.className = 'form-group';
            ingredientInput.innerHTML = '<input type="text" name="Ingredients" class="form-control" required />';
            ingredientContainer.appendChild(ingredientInput);
        }

        function addStep() {
            var stepInput = document.createElement('div');
            stepInput.className = 'form-group';
            stepInput.innerHTML = '<input type="text" name="Steps" class="form-control" required />';
            stepContainer.appendChild(stepInput);
        }
    </script>
}